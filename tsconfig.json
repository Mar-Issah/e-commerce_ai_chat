{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force",
    "esModuleInterop": true
  },
  "include": ["src/**/*", "**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}
